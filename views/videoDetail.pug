extends layouts/main

block content
    //- p videoDetail
    .video-detail_container
        .video_player
            video(src=`/${video.fileUrl}`)
        .video_info
            a(href=routes.editVideo(video.id))
                button Edit video
            h5.video_title=video.title
            p.video_description=video.description
            if video.views === 1
                span.video_views 1 view
            else
                span.video_views #{video.views} views
        .video_comments
            if video.comments.length === 1
                span.number 1 comment
            else
                span.number #{video.comments.length} comments